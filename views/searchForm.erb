<script>
document.addEventListener('DOMContentLoaded', function() {
    // --------------------------------------------
    // ▼英字と特定の記号の入力チェック用スクリプト
    // --------------------------------------------
    let targets = document.getElementsByClassName('searchAlpha')
    console.log(targets)
    for (let i=0 ; i<targets.length ; i++) {
      // ▼文字が入力されたタイミングでチェックする：
      targets[i].oninput = function () {
        let alertelement = this.parentNode.getElementsByClassName('alertarea');
        if( ( this.value != '') && (this.value.match(" ")) ) {
          // ▼何か入力があって、指定以外の文字があれば
          console.log("X")
          if( alertelement[0] ) { alertelement[0].innerHTML = '空欄は入力できません。'; }
          
          //エラーで、エラーメッセージがなかったら
            if(!$(this).nextAll('div.alert-warning').length)
            {
              //メッセージを後ろに追加
              $(this).after(
                '<div class = "alert alert-warning" style = "font-size: 13px; margin-bottom: -1px;">空欄は入力できません</div>'
              );
              nameCheck = false;
            }
        }
        else {
          // ▼何も入力がないか、または指定文字しかないなら
          if( alertelement[0] ) { alertelement[0].innerHTML = ""; }
          //エラーじゃないのにメッセージがあったら
          if($(this).nextAll('div.alert-warning').length)
          {
            console.log("ok2")
            //消す
            $(this).nextAll('div.alert-warning').remove();
          }
        }
      }
    }
});
</script>